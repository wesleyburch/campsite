<% include ../partials/header %>


    <h1 style="text-align:center">Create a new campground</h1>
    <div class="row">
        <div style="width:30%; margin:50px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group row">
                    <input type="text" name="name" class="form-control" id="campName" placeholder="campground name">
                </div>
                <div class="form-group row">
                    <input type="number" name="price" class="form-control" id="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group row">
                    <input type="text" name="image" class="form-control" id="imgURL" placeholder="image url">
                </div>
                <div class="form-group row">
                    <input type="text" name="description" class="form-control" id="description" placeholder="description">
                </div>
                <div class="form-group row">
                    <button class="btn btn-primary btn-block">Submit</button> 
                </div>
            </form>  
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>