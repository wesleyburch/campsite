<% include ../partials/header %>


    <h1 style="text-align:center">Edit <%= campground.name %></h1>
    <div class="row">
        <div style="width:30%; margin:50px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group row">
                    <input type="text" name="campground[name]" class="form-control" id="campName" value="<%= campground.name %>">
                </div>
                <div class="form-group row">
                    <input type="number" name="campground[price]" class="form-control" id="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group row">
                    <input type="text" name="campground[image]" class="form-control" id="imgURL" value="<%= campground.image %>">
                </div>
                <div class="form-group row">
                    <input type="text" name="campground[description]" class="form-control" id="description" value="<%= campground.description %>">
                </div>
                <div class="form-group row">
                    <button class="btn btn-primary btn-block">Update</button> 
                </div>
            </form>  
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>